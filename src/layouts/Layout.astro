---
import Header from '@components/Header.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;

const thisYear = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="title" content={title} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Outfit:wght@500;600;700;800&display=swap" rel="stylesheet">
    <!-- Prevent flash of unstyled content -->
    <script is:inline>
      const theme = localStorage.getItem('theme');
      const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      if (theme === 'dark' || (!theme && systemPrefersDark)) {
        document.documentElement.classList.add('dark');
      }
    </script>
    <script
      async
      data-dnt="false"
      data-host="https://microanalytics.io"
      defer
      id="ZwSg9rf6GA"
      src="https://microanalytics.io/js/script.js"
    ></script>
  </head>
  <body class="bg-neutral-50 dark:bg-neutral-900 text-neutral-800 dark:text-neutral-200 transition-colors">
    <div class="min-h-screen flex flex-col">
      <!-- Header -->
      <header class="bg-white dark:bg-neutral-800 border-b border-neutral-200 dark:border-neutral-700 sticky top-0 z-50 shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
          <Header />
        </div>
      </header>

      <!-- Main Content -->
      <main class="flex-grow max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </main>

      <!-- Footer -->
      <footer class="bg-white dark:bg-neutral-800 border-t border-neutral-200 dark:border-neutral-700 mt-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
          <div class="flex flex-col sm:flex-row justify-between items-center gap-4 text-sm text-neutral-600 dark:text-neutral-400">
            <div class="flex items-center gap-6">
              <p>Â© <span id="copyright-year">{thisYear}</span> Gibble</p>
              <a href="/disclaimer" class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Disclaimer</a>
            </div>
            <p class="text-center sm:text-right text-neutral-500 dark:text-neutral-500">
              Helping you find allergen-friendly restaurants
            </p>
          </div>
        </div>
      </footer>
    </div>
    <script>
      // Update copyright year dynamically
      const yearElement = document.getElementById('copyright-year');
      if (yearElement) {
        yearElement.textContent = new Date().getFullYear().toString();
      }
    </script>
  </body>
</html>
<style is:global>
  html {
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Outfit', 'Inter', system-ui, sans-serif;
  }

  /* Prose styles for article content */
  .prose {
    color: #44403c;
    line-height: 1.75;
  }

  .dark .prose {
    color: #d6d3d1;
  }

  .prose p {
    margin-bottom: 1.25em;
  }

  .prose h2 {
    font-size: 1.5em;
    font-weight: 700;
    margin-top: 2em;
    margin-bottom: 1em;
    line-height: 1.3;
  }

  .prose h3 {
    font-size: 1.25em;
    font-weight: 600;
    margin-top: 1.6em;
    margin-bottom: 0.6em;
    line-height: 1.4;
  }

  .prose ul, .prose ol {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
    padding-left: 1.625em;
  }

  .prose li {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }

  .prose ul {
    list-style-type: disc;
  }

  .prose ol {
    list-style-type: decimal;
  }

  .prose a {
    color: #0d9488;
    text-decoration: underline;
    font-weight: 500;
  }

  .dark .prose a {
    color: #5eead4;
  }

  .prose a:hover {
    color: #0f766e;
  }

  .dark .prose a:hover {
    color: #2dd4bf;
  }

  .prose strong {
    font-weight: 600;
    color: #292524;
  }

  .dark .prose strong {
    color: #e7e5e4;
  }

  .prose code {
    font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, monospace;
    font-size: 0.875em;
    background-color: #f5f5f4;
    padding: 0.125em 0.375em;
    border-radius: 0.25rem;
  }

  .dark .prose code {
    background-color: #292524;
  }
</style>
