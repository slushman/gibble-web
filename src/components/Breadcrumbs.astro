---
export interface Breadcrumb {
  label: string;
  href?: string;
}

interface Props {
  crumbs: Breadcrumb[];
}

const { crumbs } = Astro.props;
---

<nav aria-label="Breadcrumb" class="mb-8">
  <ol class="flex flex-wrap items-center gap-2 text-sm">
    {crumbs.map((crumb, index) => (
      <li class="flex items-center">
        {index > 0 && (
          <svg class="w-4 h-4 mx-2 text-neutral-400 dark:text-neutral-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        )}
        {crumb.href ? (
          <a href={crumb.href} class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 hover:underline font-medium transition-colors">
            {crumb.label}
          </a>
        ) : (
          <span class="text-neutral-700 dark:text-neutral-300 font-medium">{crumb.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>