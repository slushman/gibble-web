---
import SiteTitle from '@components/SiteTitle.astro';
import ThemeToggle from '@components/ThemeToggle.astro';

const isHome = Astro.url.pathname === '/';
---
<nav class="flex items-center justify-between">
  {isHome ? (
    <h1>
      <SiteTitle />
    </h1>
  ) : (
    <div>
      <SiteTitle />
    </div>
  )}

  <div class="flex items-center gap-4">
    <a href="/states" class="text-sm font-medium text-neutral-700 dark:text-neutral-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
      States
    </a>
    <a href="/allergens" class="text-sm font-medium text-neutral-700 dark:text-neutral-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
      Allergens
    </a>
    <a href="/categories" class="text-sm font-medium text-neutral-700 dark:text-neutral-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
      Categories
    </a>
    <ThemeToggle />
  </div>
</nav>
